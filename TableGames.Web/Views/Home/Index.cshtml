@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-sm-3">
        Col 1 (sm3)
    </div>
    <div class="col-sm-9">
        Col 2 (sm9)
    </div>
</div>

<div id="results"></div>

@section scripts {
    <script type="text/javascript">
        $(function() {
            var hub = $.connection.tableGamesHub;
            hub.client.hello = function(message) {
                $('#results').append('<div>' + message + '</div>');
            };

            $.connection.hub.start().done(function() {
                hub.server.hello();
            });
        });
    </script>
}
