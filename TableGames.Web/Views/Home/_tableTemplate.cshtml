<style>
    .tg-table {
        margin-bottom: 15px;
    }

    .tg-table-players {
        padding-bottom: 15px;
    }
</style>

<template id="tableTemplate">
    <div class="panel panel-default tg-table">
        <div class="panel-heading">
            <span class="badge pull-right" data-bind="text: status"></span>
            <span data-bind="text: gameName"></span>
        </div>
        <div class="panel-body">
            <!-- ko ifnot: game -->
            Waiting for players to join.
            <!-- /ko -->
            <!-- ko if: game -->
            <!-- ko template: { name: game().templateName, data: game } --><!-- /ko -->
            <!-- /ko -->
        </div>

        <div class="panel-footer">
            <!-- ko if: game -->
            <div data-bind="text: 'Winner: ' + game().winnerName()"></div>
            <!-- /ko -->
            <button type="button" class="btn btn-primary" data-bind="visible: canRestartGame, click: $root.restartGame">Restart</button>

            <div data-bind="foreach: stats">
                <div>
                    <span data-bind="text: $index"></span>
                    <span data-bind="text: isFinalized"></span>
                    <span>
                        <span data-bind="foreach: winnerNames">
                            <span data-bind="text: $data"></span>
                        </span>
                    </span>
                </div>
            </div>
        </div>
    </div>
</template>
